<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" styleClass="mainWindow"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="javafx.FXMLController">

    <AnchorPane prefHeight="650.0" prefWidth="55.0" styleClass="navigation" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">

        <VBox layoutY="15.0" prefHeight="650.0" prefWidth="55.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0.0"
              AnchorPane.topAnchor="0">

            <Button fx:id="dijkstraButton" styleClass="nav_button" alignment="CENTER" onAction="#handleDijkstraEvent"
                    text="DIJK"/>
            <Separator styleClass="nav_separator"/>

            <Button fx:id="biDijkstraButton" styleClass="nav_button" alignment="CENTER" onAction="#handleBiDijkstraEvent"
                    text="BiD"/>
            <Separator styleClass="nav_separator"/>

            <Button fx:id="aStarButton" styleClass="nav_button" alignment="CENTER" onAction="#handleAStarEvent" text="A*"/>
            <Separator styleClass="nav_separator"/>

            <Button fx:id="biAStarButton" styleClass="nav_button" alignment="CENTER" onAction="#handleBiAStarEvent"
                    text="BiA*"/>
            <Separator styleClass="nav_separator"/>

            <Button fx:id="landmarkButton" styleClass="nav_button" alignment="CENTER" onAction="#handleLandmarksEvent" text="LAND"/>
            <Separator styleClass="nav_separator"/>

            <Button styleClass="nav_button" alignment="CENTER" onAction="#handleSetParameterEvent" text="SET" />
            <Separator styleClass="nav_separator"/>

            <Button styleClass="nav_button" alignment="CENTER" onAction="#handleSeedEvent" text="SEED"/>
            <Separator styleClass="nav_separator"/>

            <Button styleClass="nav_button" alignment="CENTER" onAction="#handleChooseFileEvent" text="FILE" />
            <Separator styleClass="nav_separator"/>
        </VBox>
    </AnchorPane>

    <AnchorPane layoutX="60.0" minHeight="650" minWidth="950" AnchorPane.bottomAnchor="10.0"
                AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <StackPane id="canvasWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="650" minWidth="950">
            <Canvas fx:id="canvas" height="650.0" width="950.0"/>
        </StackPane>

        <GridPane layoutX="20.0" layoutY="560.0" prefHeight="70.0" prefWidth="100.0" AnchorPane.bottomAnchor="20.0"
                  AnchorPane.leftAnchor="20.0">

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <Button id="nav_up" styleClass="map_nav_buttons" onAction="#handleNavUpEvent" GridPane.columnIndex="1"/>
            <Button id="nav_left" styleClass="map_nav_buttons" onAction="#handleNavLeftEvent" GridPane.rowIndex="1"/>
            <Button id="nav_right" styleClass="map_nav_buttons"
                    onAction="#handleNavRightEvent" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Button id="nav_down" styleClass="map_nav_buttons"
                    onAction="#handleNavDownEvent" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
        <HBox alignment="BOTTOM_RIGHT" layoutX="832.0" layoutY="580.0" prefHeight="25.0" prefWidth="70.0"
              AnchorPane.bottomAnchor="43.0" AnchorPane.rightAnchor="20.0">

            <Button id="zoom_in" styleClass="map_zoom_button" onAction="#handleZoomInEvent"/>
            <Button id="zoom_out" styleClass="map_zoom_button" onAction="#handleZoomOutEvent">
                <HBox.margin>
                    <Insets left="5.0"/>
                </HBox.margin>
            </Button>

        </HBox>
        <VBox id="info_box" alignment="TOP_RIGHT" minHeight="20.0" prefWidth="200.0"
              AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <Label fx:id="algorithm_label" styleClass="info_label" text="Algorithm: "/>
            <Label fx:id="distance_label" styleClass="info_label" text="Total Distance: "/>
            <Label fx:id="nodes_visited_label" styleClass="info_label" text="Nodes Visited: "/>
            <Label fx:id="nodes_label" styleClass="info_label" text="Number of Nodes: "/>
            <Label fx:id="edges_label" styleClass="info_label" text="Number of Edges: "/>
            <Label fx:id="seed_label" styleClass="info_label" text="Seed: "/>
        </VBox>
    </AnchorPane>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</AnchorPane>
